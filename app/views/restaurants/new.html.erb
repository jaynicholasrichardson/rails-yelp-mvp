<div class="container">
  <div class="row">
    <div class="col">
      <h1>New restaurant</h1>

      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category %>
      <%= f.input :phone_number %>
      <%= f.submit %>
      <% end %>
    </div>
    <hr>
    <%= link_to "Back to list of restaurants", restaurants_path %>
  </div>
</div>
