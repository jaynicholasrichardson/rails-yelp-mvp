<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @restaurant.name %> (<%= @restaurant.category %>)</h1>

      <hr>

      <p><%= @restaurant.address %></p>
      <p><%= @restaurant.phone_number %></p>
      <hr>
      <h2>Comments</h2>
      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
        <% end %>
      </ul>

      <%= link_to 'Review this restaurant', new_restaurant_review_path(@restaurant) %>
    </div>

    <%= link_to "Back to list of restaurants", restaurants_path %>
  </div>
</div>
